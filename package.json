{
  "name": "cypress_e2e",
  "version": "1.0.0",
  "description": "Projeto de automação de testes E2E usando Cypress e Cucumber",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:open-prod": "cypress open --env fileConfig=prod",
    "cy:run-all": "cypress run --spec 'cypress/e2e/spec/exemplo/' --browser chrome --headless",
    "cy:run-exemplo-banco": "cypress run --spec 'cypress/e2e/spec/exemplo/sistema_bancario_fake.feature' --browser chrome --headless",
    "cy:run-exemplo-saucedemo": "cypress run --spec 'cypress/e2e/spec/exemplo/saucedemo.feature' --browser chrome --headless",
    "cypress:verify": "cypress verify",
    "update-packages": "npx npm-check-updates"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "step_definitions": "./cypress/e2e/step_definitions",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/reports/json"
    }
  },
  "keywords": ["cypress", "cucumber", "automation", "testing", "e2e", "bdd", "pageobjects"],
  "author": "Caio Andrian",
  "license": "MIT",
  "devDependencies": {
    "cypress-cucumber-preprocessor": "^4.3.1",
    "fs-extra": "^11.2.0"
  },
  "dependencies": {
    "cypress": "^14.4.1",
    "cypress-mochawesome-reporter": "^3.8.2",
    "cypress-multi-reporters": "^1.6.4",
    "junit-report-merger": "^7.0.0",
    "mocha": "^10.8.2",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "multiple-cucumber-html-reporter": "^3.9.2",
    "rimraf": "^6.0.1"
  }
}
